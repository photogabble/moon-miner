{
    "name": "blacknova/traders",
    "version": "0.7.0",
    "description": "BlackNova Traders is a web-based, multi-player space exploration game inspired by the popular BBS game of TradeWars.",
    "authors": [
        {
            "name": "Ron Harwood",
            "email": "harwoodr@gmail.com"
        },
        {
            "name": "Blacknova Development",
            "email": "blacknova@net-code.co.uk"
        },
        {
            "name": "TheMightyDude",
            "email": "TheMightyDude@gmail.com"
        },
        {
            "name": "TheKabal",
            "email": "TheKabal@gmail.com"
        },
        {
            "name": "Simon Dann",
            "email": "simon.dann@gmail.com"
        }
    ],
    "license": "AGPL-3.0",
    "require": {
        "php": "^8.3",
        "ext-gd": "*",
        "inertiajs/inertia-laravel": "^1.0",
        "laravel/framework": "^11.9",
        "laravel/sanctum": "^4.0",
        "laravel/tinker": "^2.9",
        "mchev/banhammer": "^2.3",
        "tightenco/parental": "^1.4",
        "tightenco/ziggy": "^2.0"
    },
    "require-dev": {
        "fakerphp/faker": "^1.23",
        "laravel/breeze": "^2.2",
        "laravel/pint": "^1.13",
        "laravel/sail": "^1.26",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.1",
        "phpunit/phpunit": "^11.0.1",
        "wnx/laravel-stats": "^2.14"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        },
        "files" : [
            "app/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
